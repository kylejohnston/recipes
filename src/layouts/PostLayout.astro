---
// PURPOSE: VIEW A SINGLE POST/RECIPE
import Head from '../components/_Head.astro';
import MainNav from '../components/MainNav.astro';
import PostContent from '../components/PostContent.astro';

const { content } = Astro.props;
const { title, description, publishDate, heroImage, permalink, alt } = content;
---
<html lang="en">
	<head>
		<Head {title} {description} {permalink} />
	</head>

	<body class="">
		<MainNav />
		<div class="post wrapper rounded-lg py-2">
			<PostContent {title} {heroImage} {publishDate} {alt} {description}>
				<slot /> <!-- add content from .md -->
			</PostContent>
		</div>
	</body>
</html>
