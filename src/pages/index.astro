	<body>
		<MainNav />
		<div class="wrapper max-w-2xl mx-auto px-3 md:px-0">
			<main class="content">
				<section class="intro border-b-4">
					<h1 class="latest text-6xl font-bold">{title}</h1>
					<p class="text-sm pt-4">{description}</p>
				</section>
				<section aria-label="Blog post list">
