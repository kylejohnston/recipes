---
// PURPOSE: LIST ALL POSTS/RECIPES
import type { CollectionEntry } from 'astro:content';
interface Props {
	post: CollectionEntry<'recipe'>;
}

const { post } = Astro.props;
---

<article class="post-preview searchable">
	<header class="">
		<a href={"/recipe/" + post.slug + "/"}><h1 class="text-2xl">{post.data.title}</h1></a>
	</header>
	<p class="text-base">{post.data.description}</p>
	<p class="text-sm text-gray-400 m-0 p-0">{post.data.category} { post.data.keyIngredient && <span> Â· </span> <span>{post.data.keyIngredient}</span> }</p>
</article>

